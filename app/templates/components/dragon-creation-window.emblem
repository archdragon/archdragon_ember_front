section#dragon-selection.stretched-vertically
  .left-arrow.arrow{action "scroll" "-1" on="click"}
    span.glyphicon.glyphicon-chevron-left
  .right-arrow.arrow{action "scroll" "1" on="click"}
    span.glyphicon.glyphicon-chevron-right

  #cells
    .scrollable-container
      .cell.dragon-fire
        .button-container
          button.btn.btn-default.btn-lg Create
      .cell.dragon-water
        .button-container
          button.btn.btn-default.btn-lg Create
      .cell.dragon-earth
        .button-container
          button.btn.btn-default.btn-lg Create
